{% extends layout %}

{% block head %}
    <title>Editeur - Article</title>
{{ parent() }}
{% endblock %}
{% block content %}
<section class="main_section">
    <form method="post" class="col-md-8 py-4 mx-auto" action="{{routeOf('articleUpdate', { 'id' : article.id })}}" >
        <fieldset>
            <div class="form-group">
                <label for="title">Titre de l'article</label>
                <input
                        id="title"
                        name="title"
                        type="text"
                        class="form-control"
                        value="{{article.title}}"
                        maxlength="100"
                        placeholder="Saisir un titre Ã©vocateur">
            </div>
            <div
                    class="form-group">
                <label for="content">Texte de l'article </label>
                <textarea
                        id="content"
                        type="text"
                        name="content"
                        class="form-control"
                        spellcheck="true"
                        rows="8">{{article.content}}</textarea>
            </div>
            <div class="form-row form-group">
                <label for="true">En ligne </label>
                {% if article.online != 0 %}
                <input type="radio" id="true" name="online" value="true" checked >
                <label for="false">Hors-ligne</label>
                <input type="radio" id="false" name="online" value="false">
                {% else %}
                <input type="radio" id="true" name="online" value="true" >
                <label for="false">Hors-ligne</label>
                <input type="radio" id="false" name="online" value="false" checked>
                {% endif %}
            </div>
            <div>
                <button type="submit" class="btn btn-primary" name="submit_type" value="save">Enregistrer</button>
                <button type="submit" class="btn btnSaveClose" name="submit_type" value="saveandclose">Enregistrer et Fermer</button>
                <button type="submit" class="btn btnClose" name="submit_type" value="close" >Fermer</button>
            </div>
        </fieldset>
    </form>
</section>
{% endblock %}